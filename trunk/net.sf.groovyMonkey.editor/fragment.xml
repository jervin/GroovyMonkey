<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.2"?>
<fragment>
   <extension
         point="org.eclipse.ui.popupMenus">
         <objectContribution
            adaptable="false"
            id="net.sf.groovymonkey.emFileContextMenu"
            nameFilter="*.em"
            objectClass="org.eclipse.core.resources.IFile">
            	<action
               		class="net.sf.groovyMonkey.editor.actions.AddDOM"
	                enablesFor="1"
     	            icon="icons/feature_obj.gif"
          	        id="net.sf.groovymonkey.actions.AddDOM"
               		label="Add DOM to Script"
               		menubarPath="group.editor"
               		tooltip="Add existing DOM to Monkey Script"/>
         		<action
               		class="net.sf.groovyMonkey.editor.actions.RunScript"
               		enablesFor="1"
               		icon="icons/run_exc.gif"
               		id="net.sf.groovyMonkey.actions.RunScript"
               		label="Run Script"
               		menubarPath="group.editor"
               		tooltip="Run Groovy Monkey Script"/>
         </objectContribution>
   </extension>
	<extension
         point="org.eclipse.ui.editors">
      <editor
            class="net.sf.groovyMonkey.editor.ScriptEditor"
            contributorClass="org.eclipse.ui.texteditor.BasicTextEditorActionContributor"
            default="true"
            extensions="em"
            filenames="*.em"
            icon="icons/monkey.gif"
            id="net.sf.groovymonkey.editor.ScriptEditor"
            name="Monkey Script Editor"/>
   </extension>
 <extension
       point="org.eclipse.ui.newWizards">
    <category
          id="net.sf.groovyMonkey"
          name="Groovy Monkey"/>
    <wizard
          category="net.sf.groovyMonkey"
          class="net.sf.groovyMonkey.editor.wizard.NewScriptWizard"
          icon="icons/monkey-new.gif"
          id="net.sf.groovyMonkey.editor.NewScript"
          name="New Groovy Monkey Script"/>
 </extension>
</fragment>
